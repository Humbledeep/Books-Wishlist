<?xml version='1.0' encoding='utf-8'?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--read the contents of your shared storage-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!--modify or delete the contents of your shared storage-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:resizeableActivity="false">

        <activity
            android:name="com.app.bookwishlist.SplashActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>
		<activity android:name="com.app.bookwishlist.MainActivity"/>
		<activity android:name="com.app.bookwishlist.RecordBookActivity"
            android:theme="@style/Theme.AppCompat"/>
        <activity android:name="com.app.bookwishlist.EditBookActivity"
            android:theme="@style/Theme.AppCompat"/>
        <activity android:name="com.app.bookwishlist.DetailActivity"
            android:theme="@style/Theme.AppCompat"/>
        <meta-data
            android:name="android.max_aspect"
            android:value="4.0"/>

    </application>

</manifest>
